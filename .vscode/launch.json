{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to process NODE-TS",
      "type": "node",
      "request": "attach",
      "processId": "${command:PickProcess}",
      "skipFiles": [
          // Node.js internal core modules
          "<node_internals>/**",
          // Ignore all dependencies (optional)
          "${workspaceFolder}/node_modules/**",
      ]
  },    
    {
      "name": "cds serve",
      "request": "launch",
      "type": "node",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "cds",
      "args": [
        "serve",
        "--with-mocks",
        "--in-memory?"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}
